<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gameromicon.Pages.SignUpPage"
             Title="Sign Up">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16">
            <Label Text="Create Account" FontSize="32" HorizontalOptions="Center" TextColor="DarkGreen"/>
            <Entry Placeholder="Name" Text="{Binding Name}" WidthRequest="280"/>
            <Label Text="{Binding NameErrorMessage}" TextColor="Red" IsVisible="{Binding IsNameErrorVisible}" FontSize="14"/>
            <Entry Placeholder="Email" Text="{Binding Email}" WidthRequest="280"/>
            <Label Text="{Binding EmailErrorMessage}" TextColor="Red" IsVisible="{Binding IsEmailErrorVisible}" FontSize="14"/>
            <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True" WidthRequest="280"/>
            <Label Text="{Binding PasswordErrorMessage}" TextColor="Red" IsVisible="{Binding IsPasswordErrorVisible}" FontSize="14"/>
            <Entry Placeholder="Confirm Password" Text="{Binding ConfirmPassword}" IsPassword="True" WidthRequest="280"/>
            <Label Text="{Binding ConfirmPasswordErrorMessage}" TextColor="Red" IsVisible="{Binding IsConfirmPasswordErrorVisible}" FontSize="14"/>
            <Button Text="Sign Up" Command="{Binding SignUpCommand}" BackgroundColor="#006400" TextColor="White" FontSize="18" FontAttributes="Bold" Margin="0,10,0,10" CornerRadius="10" WidthRequest="280"/>
            <Button Text="Already have an account? Sign In" Clicked="OnSignInClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>