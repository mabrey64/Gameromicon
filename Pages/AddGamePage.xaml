<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Gameromicon.ViewModels"
             x:Class="Gameromicon.Pages.AddGamePage"
             Title="Add Game">

    <!-- Set the BindingContext to your GameDetailsViewModel -->
    <ContentPage.BindingContext>
        <vm:GameDetailsViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">
            <!-- Header Section -->
            <Label Text="Add New Game"
                   FontSize="Large"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10" />

            <!-- Game Name Input -->
            <Frame BorderColor="#DDDDDD" CornerRadius="8" Padding="12" BackgroundColor="#F0F0F0" HasShadow="False">
                <Entry Placeholder="Name of Game"
                       Text="{Binding CurrentGame.Name}"
                       FontSize="Medium"
                       BackgroundColor="Transparent"
                       PlaceholderColor="#AAAAAA" />
            </Frame>

            <!-- Barcode Scanning Section -->
            <Button Text="SCAN BARCODE"
                    Command="{Binding ScanBarcodeCommand}"
                    BackgroundColor="#007bff"
                    TextColor="White"
                    FontSize="Medium"
                    CornerRadius="8"
                    HeightRequest="50"
                    Margin="0,10,0,0" />

            <Label Text="OR"
                   HorizontalOptions="Center"
                   Margin="0,10,0,10"
                   FontAttributes="Bold"
                   TextColor="#555555" />

            <!-- External API Search Section -->
            <Frame BorderColor="#DDDDDD" CornerRadius="8" Padding="12" BackgroundColor="#F0F0F0" HasShadow="False">
                <Entry Placeholder="Search Title"
                       Text="{Binding SearchTitleQuery}"
                       FontSize="Medium"
                       BackgroundColor="Transparent"
                       PlaceholderColor="#AAAAAA" />
            </Frame>

            <Frame BorderColor="#DDDDDD" CornerRadius="8" Padding="0" BackgroundColor="#F0F0F0" HasShadow="False">
                <Picker Title="Platform for Search"
                        ItemsSource="{Binding AvailablePlatforms}"
                        ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding SelectedSearchPlatform}"
                        FontSize="Medium"
                        BackgroundColor="Transparent"
                        TitleColor="#AAAAAA" />
            </Frame>

            <Button Text="SEARCH EXTERNAL API"
                    Command="{Binding SearchExternalApiCommand}"
                    BackgroundColor="#28a745"
                    TextColor="White"
                    FontSize="Medium"
                    CornerRadius="8"
                    HeightRequest="50"
                    Margin="0,10,0,20" />

            <!-- Auto-filled Details from Search -->
            <Frame BorderColor="#DDDDDD" CornerRadius="8" Padding="15" Margin="0,0,0,20" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Game Details from Search (Optional)" FontAttributes="Bold" FontSize="Small" TextColor="Gray" />
                    <Image Source="https://placehold.co/150x200/cccccc/333333?text=Boxart"
                           Aspect="AspectFit"
                           HeightRequest="150"
                           HorizontalOptions="Center" />
                    <Label Text="{Binding CurrentGame.Name, FallbackValue='Game Name'}" FontAttributes="Bold" FontSize="Large" HorizontalOptions="Center" />
                    <Label Text="{Binding CurrentGame.Description, FallbackValue='Description will appear here.'}" FontSize="Small" LineBreakMode="WordWrap" />
                </VerticalStackLayout>
            </Frame>

            <!-- Manual Input Fields -->
            <Label Text="Collected Date" FontSize="Small" TextColor="Gray" />
            <Frame BorderColor="#DDDDDD" CornerRadius="8" Padding="0" BackgroundColor="#F0F0F0" HasShadow="False">
                <DatePicker Date="{Binding CurrentGame.CollectedDate}"
                            Format="d"
                            FontSize="Medium"
                            BackgroundColor="Transparent"/>
            </Frame>

            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                <CheckBox IsChecked="{Binding CurrentGame.CiB}" Color="#007bff" />
                <Label Text="CiB (Complete in Box)" VerticalOptions="Center" FontSize="Medium" TextColor="#333333" />
            </HorizontalStackLayout>

            <Label Text="Condition" FontSize="Small" TextColor="Gray" />
            <Frame BorderColor="#DDDDDD" CornerRadius="8" Padding="0" BackgroundColor="#F0F0F0" HasShadow="False">
                <Picker Title="Select Condition"
                        ItemsSource="{Binding AvailableConditions}"
                        SelectedItem="{Binding CurrentGame.Condition}"
                        ItemDisplayBinding="{Binding Name}"
                        FontSize="Medium"
                        BackgroundColor="Transparent"
                        TitleColor="#AAAAAA" />
            </Frame>

            <Frame BorderColor="#DDDDDD" CornerRadius="8" Padding="12" BackgroundColor="#F0F0F0" HasShadow="False">
                <Entry Placeholder="Region (e.g., NTSC-U, PAL)"
                       Text="{Binding CurrentGame.Region}"
                       FontSize="Medium"
                       BackgroundColor="Transparent"
                       PlaceholderColor="#AAAAAA" />
            </Frame>

            <Frame BorderColor="#DDDDDD" CornerRadius="8" Padding="12" BackgroundColor="#F0F0F0" HasShadow="False">
                <Entry Placeholder="Number of Copies"
                       Text="{Binding CurrentGame.NumberOfCopies}"
                       Keyboard="Numeric"
                       FontSize="Medium"
                       BackgroundColor="Transparent"
                       PlaceholderColor="#AAAAAA" />
            </Frame>

            <Label Text="Release Date" FontSize="Small" TextColor="Gray" />
            <Frame BorderColor="#DDDDDD" CornerRadius="8" Padding="0" BackgroundColor="#F0F0F0" HasShadow="False">
                <DatePicker Date="{Binding CurrentGame.ReleaseDate}"
                            Format="d"
                            FontSize="Medium"
                            BackgroundColor="Transparent"/>
            </Frame>

            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                <CheckBox IsChecked="{Binding CurrentGame.IsBeaten}" Color="#007bff" />
                <Label Text="Is Beaten" VerticalOptions="Center" FontSize="Medium" TextColor="#333333" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                <CheckBox IsChecked="{Binding CurrentGame.Is100Completed}" Color="#007bff" />
                <Label Text="Is 100% Completed" VerticalOptions="Center" FontSize="Medium" TextColor="#333333" />
            </HorizontalStackLayout>

            <Frame BorderColor="#DDDDDD" CornerRadius="8" Padding="12" BackgroundColor="#F0F0F0" HasShadow="False">
                <Editor Placeholder="Description"
                        Text="{Binding CurrentGame.Description}"
                        AutoSize="TextChanges"
                        HeightRequest="100"
                        FontSize="Medium"
                        BackgroundColor="Transparent"
                        PlaceholderColor="#AAAAAA" />
            </Frame>

            <!-- Reference Data Selectors -->
            <Label Text="Publisher" FontSize="Small" TextColor="Gray" />
            <Frame BorderColor="#DDDDDD" CornerRadius="8" Padding="0" BackgroundColor="#F0F0F0" HasShadow="False">
                <Picker Title="Select Publisher"
                        ItemsSource="{Binding AvailablePublishers}"
                        ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding SelectedPublisher}"
                        FontSize="Medium"
                        BackgroundColor="Transparent"
                        TitleColor="#AAAAAA" />
            </Frame>

            <Label Text="Series" FontSize="Small" TextColor="Gray" />
            <Frame BorderColor="#DDDDDD" CornerRadius="8" Padding="0" BackgroundColor="#F0F0F0" HasShadow="False">
                <Picker Title="Select Series"
                        ItemsSource="{Binding AvailableSeries}"
                        ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding SelectedSeries}"
                        FontSize="Medium"
                        BackgroundColor="Transparent"
                        TitleColor="#AAAAAA" />
            </Frame>

            <!-- Multi-select for Genres and Platforms would typically require a custom control or a separate pop-up/page -->
            <Label Text="Genres (Multi-select)" FontAttributes="Bold" Margin="0,10,0,0" TextColor="#333333" />
            <Frame BorderColor="#DDDDDD" CornerRadius="8" Padding="12" HasShadow="False">
                <Label Text="[ Placeholder for Multi-select Genre UI ]" TextColor="Gray" FontSize="Small" />
            </Frame>
            <Label Text="Platforms (Multi-select)" FontAttributes="Bold" Margin="0,10,0,0" TextColor="#333333" />
            <Frame BorderColor="#DDDDDD" CornerRadius="8" Padding="12" HasShadow="False">
                <Label Text="[ Placeholder for Multi-select Platform UI ]" TextColor="Gray" FontSize="Small" />
            </Frame>

            <!-- Action Buttons -->
            <Button Text="SAVE GAME"
                    Command="{Binding SaveGameCommand}"
                    BackgroundColor="#007bff"
                    TextColor="White"
                    FontSize="Large"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="60"
                    Margin="0,20,0,10" />
            <Button Text="DELETE GAME"
                    Command="{Binding DeleteGameCommand}"
                    BackgroundColor="#dc3545"
                    TextColor="White"
                    FontSize="Large"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="60"
                    Margin="0,0,0,20" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
