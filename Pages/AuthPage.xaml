<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gameromicon.Pages.AuthPage"
             Title="Welcome to Gameromicon">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16">
            <Label Text="THE GAMERNOMICON"
                   FontSize="32"
                   HorizontalOptions="Center"
                   TextColor="DarkGreen"/>

            <Label Text="Welcome! Please Sign In"
                   FontSize="20"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,10,0,10"/>

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" Color="DarkGreen" HorizontalOptions="Center" />

            <!-- Email -->
            <Label Text="Email" TextColor="Black" FontSize="20" HorizontalOptions="Center"/>
            <Entry Text="{Binding Email}" ReturnType="Done" WidthRequest="280"/>
            <Label Text="{Binding EmailErrorMessage}" TextColor="Red" IsVisible="{Binding IsEmailErrorVisible}" FontSize="14" HorizontalOptions="Center"/>

            <!-- Password -->
            <Label Text="Password" TextColor="Black" FontSize="20" HorizontalOptions="Center"/>
            <Entry Text="{Binding Password}" IsPassword="True" ReturnType="Done" WidthRequest="280"/>
            <Label Text="{Binding PasswordErrorMessage}" TextColor="Red" IsVisible="{Binding IsPasswordErrorVisible}" FontSize="14" HorizontalOptions="Center"/>


            <!-- Sign In / Sign Up Buttons -->
            <Button Text="Don't have an account? Sign Up"
                    Clicked="OnSignUpClicked"/>

            <Button Text="Sign In"
                    Command="{Binding SignInCommand}"
                    IsVisible="{Binding IsSignInMode}"
                    HorizontalOptions="Center"
                    BackgroundColor="#006400"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    Margin="0,10,0,10"
                    CornerRadius="10"
                    WidthRequest="280"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
